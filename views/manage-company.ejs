<%- include('layouts/head.ejs') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>LinkedItems | Manage Company</title>
<body>
    <%- include('layouts/navigation.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="col-md-6">
                    <h3 class="text-center">Company List</h3>
                    <table class="table " id="myTable">
                        <thead class="thead-dark">
                            <tr>
                                <th>Company Id</th>
                                <th>Company Type</th>
                                <th>Company Name</th>
                                <th>Company Address</th>
                                <th>Company Phone</th>
                                <th>Company Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let j = 0; j < data.length; j++) {%> <tr>
                                <td><%= data[j].Company_id %></td>
                                <td><%= data[j].Company_type %></td>
                                <td><%= data[j].Company_name %></td>
                                <td><%= data[j].company_address %></td>
                                <td><%= data[j].company_phone_no %> </td>
                                <td><%= data[j].company_email %> </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <h3 class="text-center">Add Comapny</h3>
                <form action="addCompany" method="post">
                    <div class="form-group" >
                        <label  >Type:</label>
                        <div style="display:flex;">
                        <label for="">Product Comapny</label>
                        <input type="radio" class="form-control" value="cp" id="cp"  name="type">
                        <label for="">Delivery Comapny</label>
                        <input type="radio" class="form-control" value="cd" id="cd" name="type">
                    </div>
                    </div>
                    <div class="form-group">
                        <label >Name:</label>
                        <input type="text" class="form-control" placeholder="name" id="Name" name="name">
                    </div>
                    <div class="form-group">
                        <label >Address:</label>
                        <input type="text" class="form-control" placeholder="Address" id="Address" name="address">
                    </div>
                    <div class="form-group">
                        <label >Phone:</label>
                        <input type="text" class="form-control" placeholder="Phone" id="Phone" name="phone">
                    </div>
                    <div class="form-group">
                        <label >Email:</label>
                        <input type="email" class="form-control" placeholder="Email" id="Email" name="email">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div> 

</body>
</html>
<style>
            @import url('https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap');
        * {
            box-sizing: border-box;
            font-family: 'Lato', sans-serif;
        }
        .container,
        .container-fluid,
        .container-xxl,
        .container-xl,
        .container-lg,
        .container-md,
        .container-sm {
            width: 100%;
            padding-right: var(--bs-gutter-x, 0.75rem);
            padding-left: var(--bs-gutter-x, 0.75rem);
            margin-right: auto;
            margin-left: auto;
        }

</style>
