<%- include('layouts/head.ejs') %>
    <title>LinkedItems | add product</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap');
        * {
            margin: 0;
            font-family: 'Lato', sans-serif;
            box-sizing: border-box;
        }
        
        html,
        body {
            height: 100%;
        }
        
        #registration-page {
            height: 100%;
            background: #e5e2e2;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: scroll;
        }
        
        .signup-form {
            flex: 1;
            max-width: 600px;
            border-radius: 10px;
            background-color: #EFF0F1;
            margin-top: auto;
            margin-bottom: auto;
        }
        
        .form-header {
            padding: 15px 0;
            border-bottom: 1px solid #2f80a0;
            background-color: #2f80a0;
        }
        
        .form-header h1 {
            text-align: center;
            color: #ffffff;
            font-weight: normal;
            letter-spacing: -1px;
            font-size: 1.75em;
        }
        
        .form-header h2 {
            font-weight: normal;
            letter-spacing: -1px;
            font-size: 18px;
            text-align: center;
            color: #ffffff;
        }
        
        .form-body {
            background: white;
            padding: 5px 10px;
        }
        
        .row {
            display: flex;
        }
        
        .input-group {
            flex: 1;
            display: flex;
            flex-direction: column;
            margin: 20px 5px;
        }
        
        .input-groups {
            flex: 1;
            display: flex;
            flex-direction: column;
            margin: 20px 5px;
            box-sizing: content-box;
        }
        
        .form-footer {
            display: flex;
            justify-content: flex-end;
            padding: 10px;
        }
        
        .btn {
            padding: 10px 20px;
            background-color: #2f80a0;
            font-size: 17px;
            border: none;
            border-radius: 5px;
            color: #ffffff;
            cursor: pointer;
        }
        
        label {
            color: #6E6E6E;
            font-size: 17px;
            font-weight: 500;
        }
        
        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="date"],
        select,
        textarea {
            width: 100%;
            font-size: 18px;
            height: 34px;
            padding-left: 10px;
            padding-right: 10px;
            color: #666;
            border: 1px solid #d6d6d6;
            border-radius: 4px;
            background: white;
            outline: none;
        }
        
        textarea {
            resize: none;
            height: 100px;
        }
    </style>
    </head>

    <body>
        <%- include('layouts/navigation.ejs') %>
            <section id="registration-page" style="height: 800px;">
                <form class="signup-form" action="" method="POST">

                    <div class="form-header">
                        <h1>New Product</h1>
                        <h2>Please fill the following data to enter a new product</h2>
                    </div>
                    <div class="form-body">
                        <div class="row">
                            <div class="input-group">
                                <label>Product Name </label>
                                <input type="text" placeholder="e.g.T-shirt">
                            </div>
                            <div class="input-groups">
                                <label>Price in dollar</label>
                                <input type="text" placeholder="e.g.20">
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-group">
                                <label>Description </label>
                                <input type="email" placeholder="e.g. Blue, Long sleeves">
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-group">
                                <label>Category</label>
                                <select name="Category">
                            <option value="Clothes">Clothes</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Books">Books</option>
                            <option value="Movies">Movies</option>
                            <option value="Other">Other</option>
                          </select>
                            </div>

                        </div>
                        <div>
                            <div class="input-group">
                                <label>Production Date </label>
                                <input type="date" placeholder="Enter your Birth Date">
                            </div>
                            <label>Select Photo : </label>
                            <input type="file" name="product_image" accept="image/png, image/jpeg">


                        </div>


                    </div>
                    <div class="form-footer">
                        <button class="btn">Add</button>
                    </div>


                </form>
            </section>

            <%- include('layouts/foot.ejs') %>